        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"João Silva Santos\",\n  \"email\": \"joao.santos@email.com\",\n  \"currentValue\": 3000.00,\n  \"notes\": \"Cliente atualizado - interessado em plano premium\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/v1/leads/{{leadId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "leads", "{{leadId}}"]
        }
      }
    },
    {
      "name": "5. Atualizar Status do Lead",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
