              "",
              "pm.test('Lead atribuído com sucesso', function () {",
              "    const response = pm.response.json();",
              "    pm.expect(response.isValid).to.be.true;",
              "    // Verifica se a mensagem de sucesso está presente",
              "    pm.expect(response.successMessages).to.include('Lead atribuído ao operador com sucesso');",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "PATCH",
        "header": [
