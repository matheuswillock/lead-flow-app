          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"operatorId\": \"operator-uuid-here\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/v1/leads/{{leadId}}/assign",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "leads", "{{leadId}}", "assign"]
        }
      }
    },
    {
      "name": "7. Listar Leads com Filtros",
      "event": [
