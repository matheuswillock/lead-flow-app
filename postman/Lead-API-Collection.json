{
  "info": {
    "name": "Lead Flow App - Lead API",
    "description": "Collection para testar todas as rotas da API de Leads",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "supabaseUserId",
      "value": "ed4ab5a4-3188-41fa-8389-481784cb1f84",
      "type": "string",
      "description": "ID do usuário no Supabase - substitua pelo ID real"
    },
    {
      "key": "leadId",
      "value": "",
      "type": "string",
      "description": "ID do lead criado - será preenchido automaticamente"
    }
  ],
  "item": [
    {
      "name": "1. Criar Lead",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Salvar o ID do lead criado para usar em outras requisições",
              "if (pm.response.code === 201) {",
              "    const response = pm.response.json();",
              "    if (response.isValid && response.result && response.result.id) {",
              "        pm.collectionVariables.set('leadId', response.result.id);",
              "        console.log('Lead ID salvo:', response.result.id);",
              "    }",
              "}",
              "",
              "// Testes básicos",
              "pm.test('Status code é 201', function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "",
              "pm.test('Response tem estrutura Output', function () {",
              "    const response = pm.response.json();",
              "    pm.expect(response).to.have.property('isValid');",
              "    pm.expect(response).to.have.property('successMessages');",
              "    pm.expect(response).to.have.property('errorMessages');",
              "    pm.expect(response).to.have.property('result');",
              "});",
              "",
              "pm.test('Lead criado com sucesso', function () {",
              "    const response = pm.response.json();",
              "    pm.expect(response.isValid).to.be.true;",
              "    pm.expect(response.result).to.have.property('id');",
              "    pm.expect(response.result.name).to.eql('João Silva');",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "x-supabase-user-id",
            "value": "{{supabaseUserId}}",
            "description": "ID do usuário autenticado no Supabase"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"João Silva\",\n  \"email\": \"joao.silva@email.com\",\n  \"phone\": \"(11) 99999-9999\",\n  \"cnpj\": \"12.345.678/0001-90\",\n  \"age\": 45,\n  \"hasHealthPlan\": true,\n  \"currentValue\": 2500.00,\n  \"referenceHospital\": \"Hospital São Paulo\",\n  \"currentTreatment\": \"Cardiologia\",\n  \"meetingDate\": \"2025-09-20T14:00:00.000Z\",\n  \"notes\": \"Cliente interessado em plano familiar\",\n  \"status\": \"new_opportunity\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/v1/leads",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "leads"]
        }
      }
    },
    {
      "name": "2. Listar Leads",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code é 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Response tem estrutura Output', function () {",
              "    const response = pm.response.json();",
              "    pm.expect(response).to.have.property('isValid');",
              "    pm.expect(response).to.have.property('result');",
              "});",
              "",
              "pm.test('Lista de leads retornada', function () {",
              "    const response = pm.response.json();",
              "    pm.expect(response.isValid).to.be.true;",
              "    pm.expect(response.result).to.have.property('leads');",
              "    pm.expect(response.result).to.have.property('total');",
              "    pm.expect(response.result).to.have.property('page');",
              "    pm.expect(response.result).to.have.property('limit');",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "x-supabase-user-id",
            "value": "{{supabaseUserId}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/v1/leads?page=1&limit=10",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "leads"],
          "query": [
            {
              "key": "page",
              "value": "1"
            },
            {
              "key": "limit",
              "value": "10"
            }
          ]
        }
      }
    },
    {
      "name": "3. Buscar Lead por ID",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code é 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Lead encontrado', function () {",
              "    const response = pm.response.json();",
              "    pm.expect(response.isValid).to.be.true;",
              "    pm.expect(response.result).to.have.property('id');",
              "    pm.expect(response.result.name).to.eql('João Silva');",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "x-supabase-user-id",
            "value": "{{supabaseUserId}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/v1/leads/{{leadId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "leads", "{{leadId}}"]
        }
      }
    },
    {
      "name": "4. Atualizar Lead",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code é 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Lead atualizado com sucesso', function () {",
              "    const response = pm.response.json();",
